<style>
    .icon-box {
        text-align: center;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        .icon-box:hover {
            transform: scale(1.05);
            background-color: #e9ecef;
        }

        .icon-box i {
            font-size: 2.5rem;
            color: #007bff;
            margin-bottom: 10px;
