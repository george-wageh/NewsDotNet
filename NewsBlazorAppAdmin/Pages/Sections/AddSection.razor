<ComponentModel TItem="SectionDTO" Title="اضافة فئه جديده" OnSaveChanges="OnSaveChanges">
    <div>
        <div class="mb-3">
            <label for="SectionName" class="form-label">اسم الفئه</label>
            <input type="text" id="SectionName" class="form-control" formControlName="SectionName" @bind="Item.Name" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" @onclick="()=>OnSaveChanges.InvokeAsync(Item)">حفظ</button>
        </div>
    </div>
</ComponentModel>